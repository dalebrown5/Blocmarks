<h1><%= @topic.title %></h1>
<%= link_to "Edit Topic", edit_topic_path(@topic) %> |
<%= link_to "Delete Topic", @topic, method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' } %> |
<%= link_to "New Bookmark", new_topic_bookmark_path(@topic) %> 
<br>
<br>
<br>
<% @bookmarks.each do |bookmark| %>
  <p>
    <%= link_to "Edit", edit_topic_bookmark_path(@topic, bookmark) %>
    <%= link_to "Delete", topic_bookmark_path(@topic, bookmark), method: :delete %>
    <%=link_to bookmark.url, bookmark.url, target: '_blank' %>
    Added by: <%= bookmark.user.email %>
  </p>
<% end %>  
<br>

